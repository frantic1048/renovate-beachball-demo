{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "automerge": false,
  "gitAuthor": "Renovate Bot <renovate@whitesourcesoftware.com>",
  "postUpgradeTasks": {
    "commands": [
      "git add --all",
      "git commit -n 'uwu'",
      "npx beachball change --no-commit --type patch --message '{{{commitMessage}}}'",
      "git reset --hard",
      "npx beachball change --no-commit --type major --message '{{{commitMessage}}}'",
      "git reset --hard",
      "npx beachball change --no-commit --type none --message '{{{commitMessage}}}'",
      "git reset --hard",
      "git reset HEAD^1",
      "git add --all",
      "npx beachball change --no-commit --type patch --message '{{{commitMessage}}}'",
      "git reset"
    ],
    "fileFilters": ["**/*"],
    "executionMode": "branch"
  }
}
